{
  "background": {
    "page":"background.html"
  },
  "browser_action": {
    "default_icon":"g-logo.png",
    "default_title": "Turkish Deasciifier - T\u00FCrk\u00E7e karakterleri d\u00FCzelt"
  },
  "icons": {
    "16":"g-logo.png",
    "48":"g-logo.png",
    "64":"g-logo.png",
    "128":"g-logo.png"
  },

  "web_accessible_resources": [
    "g-logo.png"
  ],
  "description": "T\u00FCrk\u00E7e karakterleri otomatik olarak d\u00FCzelten bir eklenti (Automatically adds accented characters to Turkish texts)",
  "name": "Turkish Deasciifier",
  "permissions": [
    "notifications",
    "contextMenus", 
    "activeTab"
  ],
  
  "commands": {
    "toggle_deasciify": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Toggle deasciify"
    }
  },

  "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.3.1",
  "homepage_url":"http://www.deasciifier.com/?chrome_extension",
  "manifest_version": 2
}
